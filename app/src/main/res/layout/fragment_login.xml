<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tlogin"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/poppinsbold"
        android:paddingStart="34dp"
        android:text="LOGIN"
        android:textSize="32sp" />

    <ImageView
        android:id="@+id/gambar"
        android:layout_width="222dp"
        android:layout_height="189dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-190dp"
        android:layout_marginTop="100dp"
        android:layout_toEndOf="@id/tlogin"
        android:src="@drawable/gambarlogin" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nik"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tlogin"
        android:layout_marginStart="65dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="64dp"
        android:hint="Masukkan NIK"
        android:padding="5dp"
        android:textColorHint="@color/grey"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="19dp"
        app:boxCornerRadiusBottomStart="19dp"
        app:boxCornerRadiusTopEnd="19dp"
        app:boxCornerRadiusTopStart="19dp"
        app:boxStrokeColor="@color/blue"
        app:hintTextColor="@color/bluefiled"
        app:startIconTint="@color/blue"
        app:tabTextAppearance="@style/TabTextStyle"
        android:layout_centerHorizontal="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_nik"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            android:maxLength="20"
            android:paddingStart="20dp"
            android:textColor="@color/grey"
            android:textSize="13sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pass"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nik"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="64dp"
        android:hint="Masukkan Password"
        android:padding="5dp"
        android:textColorHint="@color/grey"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="19dp"
        app:boxCornerRadiusBottomStart="19dp"
        app:boxCornerRadiusTopEnd="19dp"
        app:boxCornerRadiusTopStart="19dp"
        android:layout_centerHorizontal="true"
        app:boxStrokeColor="@color/blue"
        app:hintTextColor="@color/bluefiled"
        app:startIconTint="@color/blue"
        app:tabTextAppearance="@style/TabTextStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:textColor="@color/grey"
            android:textSize="13sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/blueterang"
        android:elevation="8dp"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="@font/poppinsbold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_no_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum Aktivasi Akun?"
            android:textColor="@color/black"
            app:tabTextAppearance="@style/TabTextStyle"/>

        <TextView
            android:id="@+id/tv_activate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="Aktivasi"
            app:tabTextAppearance="@style/TabTextStyle"
            android:textColor="@color/blue"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
