<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Ikon Kembali -->
    <ImageView
        android:id="@+id/icon_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="60dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/back_arrow"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_arrow_back_24" />

    <!-- Judul -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="100dp"
        android:layout_toEndOf="@id/icon_back"
        android:fontFamily="@font/kanit_medium"
        android:gravity="center_horizontal"
        android:text="Kirim Email"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/gambar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/_343836" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/gambar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Masukkan Email untuk membuat password baru."
        android:textSize="15sp" />

    <!-- Input Nomor HP -->
    <EditText
        android:id="@+id/email"
        android:layout_width="306dp"
        android:layout_height="52dp"
        android:layout_below="@id/tv_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_email1"
        android:drawablePadding="10dp"
        android:hint="Masukkan Email"
        android:paddingStart="10dp" />


    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/proggres"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_below="@id/email"
        android:layout_alignBottom="@+id/email"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="552dp"
        android:visibility="gone" />

    <!-- Tombol Lanjutkan -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="306dp"
        android:layout_height="48dp"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/bluebutton"
        android:text="Kirim"
        android:textSize="14sp" />



</RelativeLayout>
